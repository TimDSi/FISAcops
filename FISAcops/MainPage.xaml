<Page x:Class="FISAcops.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FISAcops"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <StackPanel Margin="10">
            <Button Content="Lancer un appel" Margin="0,0,0,10" Width="200" Height="30" Click="BtnCall"/>
            <Button Content="Calendrier d'appels" Margin="0,0,0,10" Width="200" Height="30" Click="BtnCalender"/>
            <Button Content="Liste des groupes" Margin="0,0,0,10" Width="200" Height="30" Click="BtnGroups"/>
            <Button Content="Paramètres" Margin="0,0,0,10" Width="200" Height="30" Click="BtnParameters"/>
            <Button Content="Liste des élèves" Margin="0,0,0,10" Width="200" Height="30" Click="BtnStudents"/>
        </StackPanel>
    </Grid>
</Page>
